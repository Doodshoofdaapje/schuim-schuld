<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_grey">

    <Button
        android:id="@+id/buttonConfirmPassword"
        android:layout_width="500dp"
        android:layout_height="60dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/button_color_green"
        android:text="Wijzigen"
        app:layout_constraintBottom_toTopOf="@+id/buttonCancelPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonCancelPassword"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginBottom="80dp"
        android:backgroundTint="@color/button_color_red"
        android:text="Annuleren"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/buttonConfirmPassword"
        app:layout_constraintStart_toStartOf="@+id/buttonConfirmPassword" />

    <EditText
        android:id="@+id/newPasswordField"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@color/light_grey"
        android:ems="10"
        android:hint="Nieuw wachtwoord"
        android:inputType="textPassword"
        android:padding="20dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/confirmPasswordField"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/confirmUsernameField"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:background="@color/light_grey"
        android:ems="10"
        android:hint="Besvestig Gebruikersnaam"
        android:padding="20dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/newPasswordField"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/newUsernameField"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@color/light_grey"
        android:ems="10"
        android:hint="Nieuwe Gebruikersnaam"
        android:padding="20dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/confirmUsernameField"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/confirmPasswordField"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:background="@color/light_grey"
        android:ems="10"
        android:hint="Bevestig wachtwoord"
        android:inputType="textPassword"
        android:padding="20dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/buttonConfirmPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>